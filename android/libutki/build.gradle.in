apply plugin: "com.android.model.library"
apply plugin: 'com.github.dcendents.android-maven'

model {

    android {
        compileSdkVersion = 25
        buildToolsVersion = '25.0.2'


        defaultConfig {
            minSdkVersion.apiLevel = 9
            targetSdkVersion.apiLevel = 9
            versionCode = 1
            versionName = '1.0'
        }
        ndk {
            moduleName = "utki"
            abiFilters.addAll(['armeabi', 'armeabi-v7a', 'arm64-v8a', 'x86', 'x86_64', 'mips', 'mips64']) //this is default
            ldLibs.addAll(['android', 'log'])
            cppFlags.add("-std=c++11")
            cppFlags.add("-fexceptions")
            cppFlags.add("-frtti")
        }


    }


    android.sources {
        main {
            jni {
                exportedHeaders {
                    srcDir "../../src/"
                }
            }
        }
    }

}




def aarName = name

task copyNdkLibsToAAR(type: Zip) {
    baseName = aarName
    extension = 'aar'
    destinationDir = file('..') //put resulting AAR file to upper level directory

    from zipTree("build/outputs/aar/" + aarName + "-release.aar")
    from("../../src") {
        exclude('makefile')
        exclude('soname.txt')
        into('ndkLibs')
    }
}

build.finalizedBy('copyNdkLibsToAAR')

//This is needed for POM generation
install {
    repositories.mavenInstaller {
        pom.project {
            groupId "io.github.igagis"
            artifactId "libutki"
            version "$(version)"
        }
    }
}
build.finalizedBy('install')

task copyPomFile(type: Copy){
    from('build/poms/pom-default.xml'){
        rename(".*", aarName + ".pom")
    }
    into("../")
}


install.finalizedBy('copyPomFile')


